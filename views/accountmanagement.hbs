<div class="container-inner">
    <h4 style="text-decoration: underline;">Quản lý tài khoản</h4>
    <form action="/user" method="POST" style="margin-bottom : 20px">
        {{#if message}}
        <div class="alert {{type}}">
        <span>{{message}}</span>
        </div>
        {{/if}}
       
        <div class="form-group">
            <label for="uname">Username:</label>
            <input type="text" class="form-control" id="uname" value={{username}} readonly="readonly" name="uname">
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
            <label for="uname">Phone number:</label>
            <input type="text" class="form-control change-phone" id="phone" name="phone"  value={{phone}} >
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
            <label for="uname">Email*:</label>
            <input type="text" class="form-control change-phone" id="email" name="email"  required value={{email}} >
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
            <label for="uname">Address:</label>
            <input type="text" class="form-control change-address" id="address" name="address" value={{address}}>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
               

        <button id="update-account" type="submit" class="btn btn-primary" 
            style="margin-bottom : 20px">Cập nhật tài khoản</button>
        
    </form>
</div>
<script src="/js/account.js"></script>