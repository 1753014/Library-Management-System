<div class="container-inner">
    <h4 style="margin-top:20px;text-align:center">Hồ sơ</h4>
    <h6 style="margin-top:5px;text-align:center">Thêm thông tin cá nhân</h6>
    <form action="/user" method="POST" style="margin-bottom : 20px">
        {{#if message}}
        <div class="alert {{type}}">
        <span>{{message}}</span>
        </div>
        {{/if}}
        <div class="form-group">
            <label for="uname">Tên đăng nhập</label>
            <input type="text" class="form-control" id="uname" value={{username}} readonly="readonly" name="uname">
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng nhập thông tin.</div>
        </div>
        <div class="form-group">
            <label for="uname">Số điện thoại:</label>
            <input type="text" class="form-control change-phone" id="phone" name="phone" value={{phone}} >
             <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng nhập thông tin.</div>
        </div>
        <div class="form-group">
            <label for="uname">Email:</label>
            <input type="text" class="form-control change-phone" id="email" name="email" value={{email}} >
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng nhập thông tin.</div>
        </div>
        <div class="form-group">
            <label for="uname">Address:</label>
            <input type="text" class="form-control change-address" id="address" name="address"   value="{{address}}">
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div id="accordion">
            <div class="card">
                <div class="card-header">
                    <a style="color: black;" class="card-link" data-toggle="collapse" href="#collapseOne">
                        Đổi mật khẩu
                    </a>
                </div>
                <div id="collapseOne" class="collapse hide" data-parent="#accordion">
                    <div class="card-body">
                            <div class="form-group">
                                <label for="email">Mật khẩu hiện tại:</label>
                                <input type="password" class="form-control" id="password"
                                    placeholder="Nhập mật khẩu hiện tại" name="password">
                            </div>
                            <div class="form-group">
                                <label for="pwd">Mật khẩu mới:</label>
                                <input type="password" class="form-control" id="newpassword" placeholder="Nhập mật khẩu mới"
                                    name="newpassword">
                            </div>
                            <div class="form-group">
                                <label for="pwd">Xác nhận mật khẩu:</label>
                                <input type="password" class="form-control" id="confirmnewpassword" placeholder="Xác nhận mật khẩu"
                                    name="confirmnewpassword">
                            </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center">
        <button id="update-account" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal"
            style="margin-bottom : 20px;margin-top:15px">Cập nhật tài khoản</button>
        </div>
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Thông báo</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        Cập nhật thông tin tài khoản thành công!
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>